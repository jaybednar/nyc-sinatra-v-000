<h1>Edit a Figure</h1>

<form action="/figures/<%=@figure.id%>" method="post">

	<p>
		<label><strong>Name:</strong></label>
		<input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
	</p>	

	<p>
		<label><strong>Titles:</strong></label>
		<% @titles.each do |title| %>
		<input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>" <%= 'checked' if @figure.titles.include?(title)%>><%=title.name%> </input>
		<%end%>
	</p>
	<p>
		<label>Or, add new Title:</label>
		<input type="text" name="title[name]" id="title_name">
 </p>

 <p>
 		<label><strong>Landmarks:</strong></label>
		<% @landmarks.each do |landmark| %>
		<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>" <%= 'checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></input>
		<%end%>
	</p>
	<p>
		<label>Or, add new Landmark:</label>
		<input type="text" name="landmark[name]" id="new_landmark">
 </p>

<input type="submit" name="Edit Figure" value="Edit Figure">

</form>